<p id="notice"><%= notice %></p>

<h1>Books</h1>

<%= form_with(model: @book) do |f| %>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>

  <h2>New Book</h2>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this boook from being saved:</h2>

      <ul>
        <% @book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class='field'>
    <label>Title</label>
	  <%= f.text_field :title %>
  </div>
	
  <div class='field'>
  	<label>Body</label>
  	<%= f.text_area :body %>
  </div>
  
  <div class='actions'>
	  <%= f.submit 'Create Book' %>
	</div>
<% end %>
